{
    "manifest_version": 3,
    "name": "changecases",
    "description": "Enables user to select a text and press Alt + Z, and Alt + X to make it change case.",
    "version": "1.0",
    "icons": {
        "16": "images/icons8-system-task-16-dark.png",
        "32": "images/icons8-system-task-32-dark.png",
        "48": "images/icons8-system-task-48-dark.png",
        "128": "images/icons8-system-task-64-dark.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
          "16": "images/icons8-system-task-16-dark.png",
          "32": "images/icons8-system-task-32-dark.png",
          "48": "images/icons8-system-task-48-dark.png",
          "128": "images/icons8-system-task-64-dark.png"
        }
      },
      "permissions": ["activeTab","scripting"],
      "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+B",
            "mac": "Command+B"
          }
        }
      },
      "content_scripts": [
        {
          "js": ["content.js"],
          "matches": [
            "https://developer.chrome.com/docs/extensions/*",
            "https://developer.chrome.com/docs/webstore/*"
          ]
        }]
    


}