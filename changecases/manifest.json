{
    "manifest_version": 3,
    "name": "changecases",
    "description": "Enables user to select a text and press Alt + Z, and Alt + X to make it change case.",
    "version": "1.0",
    "icons": {
        "16": "images/icons8-system-task-16-dark.png",
        "32": "images/icons8-system-task-32-dark.png",
        "48": "images/icons8-system-task-48-dark.png",
        "128": "images/icons8-system-task-64-dark.png"
    },
    "action": {
        "default_icon": {
          "16": "images/icons8-system-task-16-dark.png",
          "32": "images/icons8-system-task-32-dark.png",
          "48": "images/icons8-system-task-48-dark.png",
          "128": "images/icons8-system-task-64-dark.png"
        },
          "default_popup": "popup.html"    
      },
      "content_scripts": [
        {
          "js": ["content.js"]
        }]
    


}